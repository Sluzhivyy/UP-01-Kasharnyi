<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/vehicleIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vehicleMakeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/vehicleModelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автор: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/vehicleYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/whatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Жанр: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TheatreIdTextView"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:text="&quot;ТеатрID: &quot;" />

</LinearLayout>